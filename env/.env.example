# ----------------------------------------------------------------------
# üåç Global Environment Configuration
# ----------------------------------------------------------------------

# Port on which the Express server runs
PORT = 3000

# Allowed CORS origin(s) ‚Äî can be a specific domain or "*"
# Example: http://localhost:5173 or https://yourdomain.com
CORS_ORIGIN = "*"

# Node environment: choose between "development" or "production"
NODE_ENV = "development"

# MongoDB connection uri
MONGODB_URI = "your mongodb server uri"

# MongoDB min pool size
MONGODB_MIN_POOL_SIZE = 5

# MongoDB max pool size
MONGODB_MAX_POOL_SIZE = 30

# MongoDB read preference
MONGODB_READ_PREFERENCE = "primaryPreferred"

# Multer max file size (ex: 10 MB)
MULTER_MAX_FILE_SIZE = 10485760